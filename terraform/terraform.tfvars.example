# -----------------------------------------------------------------------------
# Terraform Variables Example
# Copy to terraform.tfvars and fill in values
# -----------------------------------------------------------------------------

# General
project_name = "equity-research"
environment  = "prod"
location     = "swedencentral"

# Tags
tags = {
  project    = "equity-research-agent"
  managed_by = "terraform"
  owner      = "your-name"
}

# Azure OpenAI deployments
openai_deployments = [
  {
    name     = "gpt-4o-mini"
    model    = "gpt-4o-mini"
    version  = "2024-07-18"
    capacity = 10
  },
  {
    name     = "text-embedding-ada-002"
    model    = "text-embedding-ada-002"
    version  = "2"
    capacity = 10
  }
]

# Container App resources
container_app_cpu          = 0.5
container_app_memory       = "1Gi"
container_app_min_replicas = 0    # Scale to zero
container_app_max_replicas = 3

# Telegram bot resources
telegram_bot_cpu    = 0.25
telegram_bot_memory = "0.5Gi"

# Qdrant resources
qdrant_cpu    = 1
qdrant_memory = 2

# -----------------------------------------------------------------------------
# Secrets (sensitive - use TF_VAR_* env vars in CI/CD)
# -----------------------------------------------------------------------------

# Required
# telegram_bot_token = "123456789:ABCdefGHIjklMNOpqrsTUVwxyz"

# SEC EDGAR (required for 10-K analysis)
# sec_user_agent = "YourApp your-email@example.com"

# API Security (recommended for production)
# Generate with: openssl rand -hex 32
# api_secret_key = "your-64-char-hex-key"

# Optional: Groq (free LLM alternative to Azure OpenAI)
# groq_api_key = "gsk_..."

# Optional: LangSmith tracing
# langchain_api_key = "ls__..."
